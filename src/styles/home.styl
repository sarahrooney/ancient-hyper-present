.home
  position relative
  
  overflow hidden

  .landing
    display block
    position fixed
    top 0
    left 50%
    transform translateX(-50%)
    
    width 100%
    max-width 1440px
    height 100vh
    
    overflow hidden
    
    &-logo
      display
      absolute-center()
      transform translate(-50%, -50%) scale(1)
      
      max-width 90%
      width auto
      max-height 90%
      height auto
      
      animation float 3s infinite alternate ease-in-out
      
      cursor pointer
      
      &.zoom
        animation zoomIn 1.75s normal forwards $cubic-bezier
      
  &__content
    position relative
    display none
    
    opacity 0
    
    visibility hidden
    
    transition opacity 1.75s $cubic-bezier
    
    &.fade
      opacity 1
      visibility visible
      
    .header
      display block
      
      width 90%
      max-width $container-max-width
      
      margin 0 auto
      padding $gutter 0
      
      &-logo
        display block
        
        max-width 100%
        width auto
        height auto
        
        &-link 
          display block
          
          max-width 278px
          width 85%
          height auto
          
          margin 0 auto
          
    &__wrap
      display block
      
      width 90%
      max-width $container-max-width
      
      margin 50px auto
          
    &__row
      position relative
      display block
      
      width 100%
      
      margin 0 0 50px
      
      overflow hidden
      
      &--vid
        position: relative;
        max-width: 100%;
        padding-bottom: 56.25%;
        
        .video
          position: absolute;
          top: 0;
          left: 50%;
          transform: translateX(-50%);
          width 100%
          height 100%

      &--book
        height 100%
        padding: 0;
        
        > .inline-cta 
          display block
          
          margin-top 25px
          
    &__bottom-img
      display block
      width 100%
      max-width 300px
      height auto
      margin 0 auto


@keyframes float
  from
    // transform translate(-50%, -50%) scale(1)
    top 50%
    opacity 1
    
  to 
    // transform translate(-50%, -53%) scale(1)
    top 47%
    opacity 0.6
    
@keyframes zoomIn
  0%
    transform translate(-50%, -50%) scale(1)
    
  15%
    opacity 1

  100%
    transform translate(-50%, -50%) scale(3)
    opacity 0