.home
  position relative
  
  overflow hidden

  .landing
    position absolute
    top 0
    left 0
    display block
    
    width 100%
    height 100vh
    
    overflow hidden
    
    &-logo
      display
      absolute-center()
      transform translate(-50%, -50%) scale(1)
      
      max-width 100%
      width auto
      max-height 100%
      height auto
      
      animation float 3s infinite alternate ease-in-out
      
      cursor pointer
      
      &.zoom
        animation zoomIn 1.5s normal forwards $cubic-bezier
      
  &__content
    position relative
    display block
    
    opacity 0
    
    visibility hidden
    
    transition opacity 1.5s $cubic-bezier .2s
    
    &.fade
      opacity 1
      visibility visible
      
    .header
      display block
      
      width 90%
      max-width $container-max-width
      
      margin 0 auto
      padding $gutter 0
      
      &-logo
        display block
        
        max-width 100%
        width auto
        height auto
        
        &-link 
          display inline-block
          
    &__wrap
      display block
      
      width 90%
      max-width $container-max-width
      
      margin 100px auto
          
    &__columns
      display flex
      flex-flow row nowrap
      justify-content space-between
      align-content stretch
      
      .column-flex
        display block
        
        &--1
          flex 0 0 27%
          width 27%
          
          border 1px solid $green
          
          overflow-y scroll
          
        &--2
          flex 0 0 42%
          width 42%
          
        .column-item
          display block
          
          max-width 100%
          height auto
          
          margin 15px auto


@keyframes float
  from
    transform translate(-50%, -50%) scale(1)
    opacity 1
    
  to 
    transform translate(-50%, -53%) scale(1)
    opacity 0.6
    
@keyframes zoomIn
  0%
    transform translate(-50%, -50%) scale(1)
    
  15%
    opacity 1

  100%
    transform translate(-50%, -50%) scale(3)
    opacity 0